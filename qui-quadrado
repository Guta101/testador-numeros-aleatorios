package chiquadrado;

/**
 *
 * @author Maxsuel
 */
public class ChiQuadrado {
    static int numerosaleatorios[] = {1, 2, 3, 4, 5}; //esta variavel representa quais numeros foram adicionados
    static int observado[] = new int[5]; //essa variavel representa a quantidade de numeros observados, desativada no momento
    static int esperado = 1; //essa variavel representa a quantidade de numeros esperados, de acordo com a quantidade de numeros aleatorios
    static double chi = 0; // resultado do chi, ou qui, sla
    static int a1, a2, a3, a4, a5;
   
        
    public static void main(String[] args) {

        //verifica a quantidade de cada numero q foi inserido
            for(int i = 0; i < 5; i++){
                if(numerosaleatorios[i] == 1){
                    a1++;
                } else if(numerosaleatorios[i] == 2){
                a2++;
            } else if(numerosaleatorios[i] == 3){
               a3++;
            } else if(numerosaleatorios[i] == 4){
                a4++;
            } else if(numerosaleatorios[i] == 5){
                a5++;
            }
            }
            
            // observado recebe numeros
            observado[0] = a1;
            observado[1] = a2;
            observado[2] = a3;
            observado[3] = a4;
            observado[4] = a5;
            
            
            //conta do chi-quadrado
            for(int i = 0; i < 5; i++){
        chi = chi + Math.pow(observado[i]-esperado, 2)/esperado;
            }
            System.out.println(chi);
    }
    
}
